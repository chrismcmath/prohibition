template(name="team")
    .col-xs-12.node
        .jumbotron(class="{{#if self}}self-border{{/if}}", style="background: #{colour}")
            h2.name #{name}
            .col-xs-6
                if hasProhibition
                    p prohibition at
                    each prohibitions 
                        p #{name}
                        br
                else
                    p prohibition inactive
            .col-xs-6
                p points
                p #{points}
